@page "/"

<div class="dark-container d-flex flex-column align-items-center p-3">
    <h3 class="text-light">Minimal Dark-Themed Chat</h3>
    <!-- Chat Messages Placeholder -->
    <div class="chat-messages w-100 mb-3 p-3 text-light">
        <p class="text-secondary">No messages yet...</p>
    </div>

    <!-- Input for typing chat messages -->
    <div class="w-100 d-flex">
        <input class="form-control chat-input me-2" placeholder="Type your message..." />
        <button class="btn btn-secondary">Send</button>
    </div>
</div>